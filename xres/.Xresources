! Xresource file
! Thanks to twily for this theme http://twily.info
URxvt*depth: 24
URxvt*geometry: 100x25
URxvt.borderColor: rgba:2000/2000/2000/c800
URxvt.internalBorder: 8
URxvt.cursorUnderline: true
!URxvt.cursorBlink: true

!URxvt*.transparent: true
!URxvt*.shading: 15
URxvt*.depth: 32
URxvt*.background: rgba:2000/2000/2000/c800

! -- scrollbar
URxvt.scrollstyle: plain
URxvt.scrollBar: false
URxvt*scrollTtyOuput: false
URxvt*scrollWidthBuffer: true
URxvt*scrollTtyKeypress: true

! -- login shell
URxvt*loginShell: true

! -- font
!URxvt.font: xft:Terminus:pixelsize=12
!URxvt.font: xft:Droid Sans Mono:size=10
!URxvt.font: xft:Ubuntu Mono:size=10
!URxvt.font: xft:PragmataPro:size=10
!URxvt.font: xft:Inconsolata:size=10
!URxvt.font: xft:Liberation Mono:size=10
!URxvt.font: xft:berry:pixelsize=12
!URxvt.font: xft:tewi-8
!URxvt.font: xft:terminus:size=8
!URxvt.font: xft:tamsyn:size=8
!URxvt.font: xft:cure-8
URxvt.font: xft:Source Code Pro:size=10
URxvt.boldFont:
URxvt*letterSpace: -1
!URxvt*lineSpace: 2

! -- perl
URxvt.perl-ext-common: default,clipboard,vtwheel,matcher
URxvt.keysym.Mod4-v: perl:clipboard:paste
!URxvt.url-launcher: /usr/local/bin/firefox-nightly
URxvt.matcher.button: 1
!URxvt.colorUL: #9472ec

URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! -- clicky links
urxvt*perl-lib:            /usr/lib/urxvt/perl/
urxvt*perl-common:        default,matcher
urxvt*url-launcher:        /usr/bin/firefox
urxvt*matcher.button:        1
urxvt*matcher.pattern.1:   \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

! -- tabs
!URxvt.tabbed.tabbar-fg: 8
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 15
!URxvt.tabbed.tab-bg: 0

! made w/ http://terminal.sexy/
! special
*.foreground:   #cecfd1
*.background:   #111113
*.cursorColor:  #cecfd1

! black
*.color0:       #111113
